<!DOCTYPE html>
<html>
<head>
  <title>My Rides</title>
</head>
<body class="landing">
  <div class="container">
    <br></br>
    <div class="row">
      <div class="col-sm-3">
        <!--left col-->
        <ul class="list-group">
          <li class="list-group-item text-muted main-color" contenteditable="false">My Rides</li>
            <% @rides.each do |ride| %>
              <li class="list-group-item"><a href="/rides/RideDetails">
                <td><%= ride.id %>
                <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
                <td><%= link_to 'Destroy', ride_path(ride),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
                </td></a></li>
            <% end %>
          </li>
        </ul>
      </div>  
      <!--View/Edit/Delete rides-->
      <div class="col-sm-9">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p class="main-color">Ride Details</p>
          </div>
          <div class="panel-body">
            <h4>Please select a ride!</h4>
          </div>
        </div>
      </div>
    </div>
    <br></br>
  </div>
</body>
</html>
<%= link_to 'Offer New Ride', controller: 'rides' %>

