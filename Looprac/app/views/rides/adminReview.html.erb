<div class="container">
  <div class="col-md-8">
    <h1 class="page-header">
      Review Rides
    </h1>
  <div class="list-group">
  <% @i=0 %>
  <% @k=0 %>
  <% @rides.each do |r| %>

    <div class="list-group-item">
      <h4 class="list-group-item-heading"><%= @offerers.fetch(@i).username%> offered a ride</h4>
      <p class="list-group-item-text">This user offered a ride from <%= @landmarks.fetch(@k).name %>
      to <%= @landmarks.fetch(@k+1).name %> </p>
      <p class="list-group-item-text"> Number of seats: <%= r.seatNum %> </p>
      <% if ! r.description.blank? %>
        <p class="list-group-item-text"> Description: <%= r.description %> </p>
      <% end %>
      <p class="list-group-item-text"> Time: <%= r.datetime %> </p>
      <p class="list-group-item-text"> Price: <%= (r.price).round(2) %> LE </p>
      <table>
        <td>
        <% if r.ac? %>
          <tr>
            <img src="/assets/ac.png" style="width:25px;height:25px">
          </tr>
        <% end %>
        <% if r.smoking? %>
           <tr>
            <img src="/assets/smoking.jpg" style="width:25px;height:25px">
          </tr>
        <% end %>
        <% if r.pets? %>
           <tr>
            <img src="/assets/pet.png" style="width:25px;height:25px">
          </tr>
        <% end %>
        <% if r.food? %>
           <tr>
            <img src="/assets/food.png" style="width:25px;height:25px">
          </tr>
        <% end %>
         <% if r.music? %>
           <tr>
           <img src="/assets/music.png" style="width:25px;height:25px">
          </tr>
        <% end %>
        </td>
      </table>
      <br>
      <% if r.reviewed == true %>
        <p style="background-color: #0cace7; font-size: 90%"> Ride Offer Accepted </p>
      <% elsif r.reviewed == false %>
        <p style="background-color: LightGray; font-size: 90%"> Ride Offer Rejected </p>
      <% else %>
        <button type="button" class="btn btn-default" ><%= link_to 'Accept', rides_adminDecision_path(r, :flag => true, :id => r.id) %></button>
        <button type="button" class="btn btn-default" ><%= link_to 'Reject', rides_adminDecision_path(r, :flag => false,:id => r.id) %></button>
      <% end %>
    </div>
  <% @i=@i+1 %>
  <% @k=@k+2 %>  
  <br>
  <br>
  <% end %>  
  </div>  
  </div>
</div>
   