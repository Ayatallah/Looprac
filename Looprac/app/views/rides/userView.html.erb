<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">My Rides</a></li>
  <li role="presentation"><%= link_to 'Requests', :controller => "/requests" %></li>
</ul>
<br>

<div class="list-group">
  <% @rides.each do |r| %>
    <a href="#" class="list-group-item">
    <h4 class="list-group-item-heading">Ride from <%= @landmarks.find(r.source_id).name %> to <%= @landmarks.find(r.destination_id).name %> </h4>
    <p class="list-group-item-text"> Number of seats: <%= r.seatNum %> </p>
    <p class="list-group-item-text"> Description: <%= r.description %> </p>
  </a>
  <br>
  <% end %>
  
</div>