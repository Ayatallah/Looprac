<div class="container">
  <div class="col-md-8">
    <h1 class="page-header">
      <font color="#01A9DB">Rides</font>
    </h1>
<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">My Rides</a></li>
  <li role="presentation"><%= link_to 'Requests', :controller => "/requests" %></li>
</ul>
<br>
<div class="row">
<div class="col-sm-7">
<div class="list-group">
  <% @rides.each do |r| %>
  <li class="list-group-item">
      <h4 class="list-group-item-heading"> Ride is from <%= r.source.name %> to <%= r.destination.name %> </h4>
      <p class="list-group-item-text"> Number of seats: <%= r.seatNum %> </p>
      <% if ! r.description.blank? %>
        <p class="list-group-item-text"> Description: <%= r.description %> </p>
      <% end %>
      <p class="list-group-item-text"> Time: <%= r.datetime %> </p>
      <%if r.price %>
        <p class="list-group-item-text"> Price: <%= (r.price).round(2) %> LE </p>
      <% end %>
      <table>
        <td>
        <% if r.ac? %>
          <tr>
            <img src="/assets/ac.png" style="width:25px;height:25px">
          </tr>
        <% end %>
        <% if r.smoking? %>
           <tr>
            <img src="/assets/smoking.jpg" style="width:25px;height:25px">
          </tr>
        <% end %>
        <% if r.pets? %>
           <tr>
            <img src="/assets/pet.png" style="width:25px;height:25px">
          </tr>
        <% end %>
        <% if r.food? %>
           <tr>
            <img src="/assets/food.png" style="width:25px;height:25px">
          </tr>
        <% end %>
         <% if r.music? %>
           <tr>
           <img src="/assets/music.png" style="width:25px;height:25px">
          </tr>
        <% end %>
        </td>
      </table>
    <%= link_to 'Edit', edit_ride_path(r) %>
    <%= link_to 'Delete', ride_path(r), method: :delete, data: { confirm: 'Are you sure?' } %>
  </a>
  </li>

  <br>
  <% end %>
  </div>
</div>
</div>
</div>
</div>