<ul class="nav nav-tabs">
  <li role="presentation" > <li><%= link_to 'Rides', :controller => "/rides" %></li> </li>
  <li role="presentation" class="active"><a href="#">Requests</a></li>
</ul>
<br>
<script type="text/javascript">
  function changeTextAccept() {
    document.getElementById('acceptButton').innerHTML = 'Ride Request Accepted';
  }
  function changeTextReject() {
    document.getElementById('rejectButton').innerHTML = 'Ride Request Rejected';
  }
</script>

<div class="list-group">
  <% @i=0 %>
  <% @k=0 %>
  <% @requests.each do |r| %>

    <a href="#" class="list-group-item">
      <h4 class="list-group-item-heading"><%= @requesters.fetch(@i).username%> requested to take your ride</h4>
      <p class="list-group-item-text">This user requested to take your ride from <%= @landmarks.fetch(@k).name %>
      to <%= @landmarks.fetch(@k+1).name %> </p>
      <br>
      <% if r.response == true %>
        <p style="background-color: LightGray; font-size: 90%"> Ride Request Accepted </p>
      <% elsif r.response == false %>
        <p style="background-color: LightGray; font-size: 90%"> Ride Request Rejected </p>
      <% else %>
        <button id="acceptButton" type="button" class="btn btn-default" onclick="changeTextAccept()"><%= link_to 'Accept', edit_request_path(r, :flag => true) %></button>
        <button id="rejectButton" type="button" class="btn btn-default" onclick="changeTextReject()"><%= link_to 'Reject', edit_request_path(r, :flag => false) %></button>
      <% end %>
    </a>  
      <!-- Accept/reject button -->
